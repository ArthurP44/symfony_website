{% extends 'base.html.twig' %}

{% block title 'Prêts' %}

{% block navBar %}
    {% include '/navbars/navbarHomeAdmin.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container-fluid mt-5">
        <div class="row d-flex justify-content-center">
            <div class="jumbotron text-center">
                <h1>Mes BDs en prêt : </h1>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="jumbotron">
            {% for bd in bds %}
                <div class="col-md-3 text-center">
                    <a class="btn" href="{{ path('bd_show', {'id': bd.id}) }}">
                        <div class="card" style="width: 18rem;">
                            <div class="card-body">
                                <img src="/build/covers/{{ bd.filename }}" alt="bd cover" style="height: 26em; width: 18em">
                                <h5 class="card-title mt-3">{{ bd.title }}</h5>
                                <p class="card-text">({{ bd.comment }})</p>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}