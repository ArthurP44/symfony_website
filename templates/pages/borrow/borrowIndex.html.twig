{% extends 'base.html.twig' %}

{% block title 'Prêts' %}

{% block navBar %}
    {% include '/navbars/navbarHomeAdmin.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container-fluid mt-5">
        <div class="row d-flex justify-content-center">
            <div class="jumbotron text-center">
                <h1>Mes BDs en prêt : </h1>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="jumbotron">
            <div class="row">
                {% for bd in bds %}
                    <div class="col-md-4 text-center">
                        <a class="btn" href="{{ path('bd_show', {'id': bd.id}) }}">
                            <div class="card mt-3 " style="max-width: 22em; max-height: 36em">
                                <div class="card-body mt-3" style="width: 22em; height: 34em;">
                                    <img src="/build/covers/{{ bd.filename }}" alt="bd cover"
                                         style="height: 26em; width: 18em">
                                    <h5 class="card-title mt-3">{{ bd.title }}</h5>
                                    {% if bd.comment %}
                                        <p class="card-text">({{ bd.comment }})</p>
                                    {% endif %}
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}