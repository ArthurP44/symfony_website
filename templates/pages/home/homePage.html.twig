{% extends 'base.html.twig' %}

{% block title 'Accueil' %}

{% block navBar %}
    {% include '/navbars/navbarHomeAdmin.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container-fluid mt-5">
        <div class="row d-flex justify-content-center">
            <div class="jumbotron text-center">
                <h1>Bienvenue dans la BDthèque de Finou !</h1>
            </div>
        </div>
    </div>
    <div class="container-fluid mt-5">
        <div class="row d-flex justify-content-center">
            <div class="jumbotron text-center">
                <h1 class="mb-5">Les derniers ajouts à ma collection : </h1>
                {% for bd in bds %}
                    <div class="card mt-3">
                        <a class="btn" href="{{ path('bd_show', {'id': bd.id}) }}">
                            <div class="card-body">

                                <h5 class="card-title">
                                    {{ bd.title }}
                                </h5>

                                <p class="card-text text-muted">({{ bd.createdAt|date('d/m/Y') }})</p>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}