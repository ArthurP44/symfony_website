{% extends 'base.html.twig' %}

{% block title %}BD{% endblock %}

{% block navBar %}
    {% include '/navbars/navbarHomeAdmin.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="jumbotron">
            <div class="row">
                <div class="col-4">
                    <div class="row">
                        <div class="col">
                            <div class="card mb-3" style="max-width: 540px; max-height: 600px">
                                <div class="row no-gutters">
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ bd.title }}</h5>
                                            <p class="card-text">{{ bd.author }}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="card mb-3" style="max-width: 420px; max-height: 29em">
                                <div class="row no-gutters">
                                    <div class="col-md-8">
                                        <div class="card-body" style="height: 40em; width: 20em;">
                                            <img src="{{ asset('build/undertaker.jpg') }}" alt="bd cover" style="height: 26em; width: 18em">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-8">
                    <div class="card mb-3 ml-5" style="max-width: 540px;">
                        <div class="row no-gutters">
                            <div class="col-md-8">
                                <div class="card-body" style="height: 37.6em">
                                    <p class="card-text"><strong>Genre : </strong>{{ bd.genre }}</p>
                                    <p class="card-text"><strong>Série : </strong>{{ bd.serie }}</p>
                                    <p class="card-text"><strong>Édition : </strong>{{ bd.edition }}</p>
                                    <p class="card-text"><strong>Collection : </strong>{{ bd.collection }}</p>
                                    <p class="card-text"><strong>Date de création
                                            : </strong>{{ bd.creationDate|date('Y') }}</p>
                                    <p class="card-text"><strong>Date de mon édition
                                            : </strong>{{ bd.ownedBdDate|date('Y') }}</p>
                                    <p class="card-text"><strong>Cote : </strong>{{ bd.value }}</p>
                                    <p class="card-text"><strong>Prix : </strong>{{ bd.price }} €</p>
                                    <p class="card-text"><strong>ISBN : </strong>{{ bd.ISBN }}</p>
                                    <p class="card-text"><strong>En prêt : </strong>{{ bd.onLoan ? 'Oui' : 'Non' }}</p>
                                    <p class="card-text"><strong>Commentaire : </strong>{{ bd.comment }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="jumbotron">
            <div class="row">
                <div class="card-body">
                    <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            {% for bd in bd %}
                                <div class="carousel-item">
                                    <img src="{{ bd.image }}" class="d-block w-100" alt="...">
                                </div>
                            {% endfor %}
                            <div class="carousel-item active" data-interval="10000">
                                <img src="..." class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item" data-interval="2000">
                                <img src="..." class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="..." class="d-block w-100" alt="...">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleInterval" role="button"
                           data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleInterval" role="button"
                           data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>


        <a class="btn btn-outline-primary mb-4" href="{{ path('bd_index') }}">Liste</a>

        <a class="btn btn-outline-warning mb-4" href="{{ path('bd_edit', {'id': bd.id}) }}">Modifier</a>

        {{ include('bd/_delete_form.html.twig') }}

    </div>
{% endblock %}
