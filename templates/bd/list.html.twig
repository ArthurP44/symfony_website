{% extends 'base.html.twig' %}

{% block title %}Bds{% endblock %}

{% block navBar %}
    {% include '/navbars/navbarHomeAdmin.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container mt-5 pt-5">
        <div class="row d-flex justify-content-center">
            <div class="jumbotron text-center">
                <h1>Mes Bandes Dessinées : </h1>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="jumbotron">
            <div class="row">
                <div class="card mr-5 ml-5 mb-3">
                    <div class="card-body">
                        <p class="text-center">Auteurs : </p>
                        <select>
                            {% for bd in authors %}
                                <option>{{ bd.author }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="card mr-5 mb-3">
                    <div class="card-body">
                        <p class="text-center">Genres : </p>
                        <select>
                            {% for bd in genres %}
                                <option>{{ bd.genre }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="card mr-5 mb-3">
                    <div class="card-body">
                        <p class="text-center">Séries : </p>
                        <select>
                            {% for bd in series %}
                                <option>{{ bd.serie }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for bd in bds %}
                    <div class="col-md-4 text-center">
                        <a class="btn" href="{{ path('bd_show', {'id': bd.id}) }}">
                            <div class="card mt-3 " style="max-width: 22em; max-height: 36em">
                                <div class="card-body mt-3" style="width: 22em; height: 33em;">
                                    <img src="/build/covers/{{ bd.filename }}" alt="bd cover"
                                         style="height: 26em; width: 18em">
                                    <h5 class="card-title mt-3">{{ bd.title }}</h5>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
            <div class="pagination">
                {{ knp_pagination_render(bds) }}
            </div>
        </div>
    </div>
{% endblock %}